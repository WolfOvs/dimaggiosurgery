{
  "hosting": {
    "public": "deploy",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/languages/*.json",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Content-Security-Policy",
            "value": "script-src 'self' 'unsafe-inline' https://www.topdoctors.co.uk/;"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/en",
        "destination": "/index.html"
      },
      {
        "source": "/it",
        "destination": "/index.html"
      },
      {
