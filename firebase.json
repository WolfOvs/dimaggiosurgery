{
  "hosting": {
    "public": "deploy",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/languages/*.json",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Content-Security-Policy",
            "value": "script-src 'self' 'unsafe-inline' https://www.topdoctors.co.uk/;"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/en",
        "destination": "/index.html"
      },
      {
        "source": "/it",
        "destination": "/index.html"
      },
      {
        "source": "/curriculum",
        "destination": "/curriculum.html"
      },
      {
        "source": "/en/curriculum",
        "destination": "/curriculum.html"
      },
      {
        "source": "/it/curriculum",
        "destination": "/curriculum.html"
      },
      {
        "source": "/blog",
        "destination": "/blog.html"
      },
      {
        "source": "/en/blog",
        "destination": "/blog.html"
      },
      {
        "source": "/it/blog",
        "destination": "/blog.html"
      },
      {
        "source": "/chronic-heartburn",
        "destination": "/chronic-heartburn.html"
      },
      {
        "source": "/en/chronic-heartburn",
        "destination": "/chronic-heartburn.html"
      },
      {
        "source": "/it/chronic-heartburn",
        "destination": "/chronic-heartburn.html"
      }
    ]
  }
}
